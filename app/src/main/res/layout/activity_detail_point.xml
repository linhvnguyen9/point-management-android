<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPointActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_subject"
        app:layout_constraintVertical_bias="0.15">

        <TableRow>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="SUBJECT"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="170dp" />

            <TextView
                android:id="@+id/txt20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="POINT"
                tools:layout_editor_absoluteX="259dp"
                tools:layout_editor_absoluteY="163dp" />

        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:text="Attandance"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="170dp" />

            <TextView
                android:id="@+id/txt_attandancePoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="6"
                tools:layout_editor_absoluteX="259dp"
                tools:layout_editor_absoluteY="163dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:text="Test"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="170dp" />

            <TextView
                android:id="@+id/txt_testPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="6"
                tools:layout_editor_absoluteX="259dp"
                tools:layout_editor_absoluteY="163dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:text="Project"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="170dp" />

            <TextView
                android:id="@+id/txt_projectPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="6"
                tools:layout_editor_absoluteX="259dp"
                tools:layout_editor_absoluteY="163dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:text="Final"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="170dp" />

            <TextView
                android:id="@+id/txt_finalPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="6"
                tools:layout_editor_absoluteX="259dp"
                tools:layout_editor_absoluteY="163dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#DF5F5F"
                android:text="AVG"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="170dp" />

            <TextView
                android:id="@+id/txt_avgPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:text="6"
                android:textSize="15dp"
                android:textColor="#DF5F5F"
                tools:layout_editor_absoluteX="259dp"
                tools:layout_editor_absoluteY="163dp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phat trien phan mem"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_subject"
        app:layout_constraintVertical_bias="0.047" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_subject"
        app:layout_constraintVertical_bias="0.724" />


</androidx.constraintlayout.widget.ConstraintLayout>